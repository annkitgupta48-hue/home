import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery } from '@tanstack/react-query';
import { Input } from '@/components/ui/input';
import { Button } from '@/components/ui/button';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { Card, CardContent } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Search, MapPin, Building2, Clock, Filter } from 'lucide-react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';

export default function Jobs() {
  const urlParams = new URLSearchParams(window.location.search);
  const initialQuery = urlParams.get('q') || '';
  const initialCategory = urlParams.get('category') || 'All';

  const [searchTerm, setSearchTerm] = useState(initialQuery);
  const [categoryFilter, setCategoryFilter] = useState(initialCategory);
  const [sectorFilter, setSectorFilter] = useState('All');
  const [typeFilter, setTypeFilter] = useState('All');

  const { data: jobs = [], isLoading } = useQuery({
    queryKey: ['jobs', searchTerm, categoryFilter, sectorFilter, typeFilter],
    queryFn: async () => {
      // Since we want a complex filter that mixes exact matches and search,
      // we'll fetch approved jobs and filter client-side for simplicity 
      // (Base44 SDK filtering is basic). For larger apps, we'd use advanced backend queries.
      // But let's try to use the SDK filter for at least the status.
      const allJobs = await base44.entities.Job.filter({ status: 'approved' }, { created_date: -1 }, 100);
      return allJobs;
    }
  });

  const { data: categories } = useQuery({
    queryKey: ['categories'],
    queryFn: () => base44.entities.Category.list(),
    initialData: []
  });

  // Client-side filtering for search term and other specifics
  const filteredJobs = jobs.filter(job => {
    const matchesSearch = job.title.toLowerCase().includes(searchTerm.toLowerCase()) || 
                          job.company.toLowerCase().includes(searchTerm.toLowerCase()) ||
                          job.location.toLowerCase().includes(searchTerm.toLowerCase());
    
    const matchesCategory = categoryFilter === 'All' || job.category === categoryFilter;
    const matchesSector = sectorFilter === 'All' || job.sector === sectorFilter;
    const matchesType = typeFilter === 'All' || job.job_type === typeFilter;

    return matchesSearch && matchesCategory && matchesSector && matchesType;
  });

  return (
    <div className="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
      <div className="container mx-auto px-4">
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div>
            <h1 className="text-3xl font-bold text-gray-900 dark:text-white">Find Your Dream Job</h1>
            <p className="text-gray-500 dark:text-gray-400 mt-1">
              Showing {filteredJobs.length} jobs
            </p>
          </div>
        </div>

        {/* Filters */}
        <Card className="mb-8 bg-white dark:bg-gray-800">
          <CardContent className="p-4">
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div className="relative">
                <Search className="absolute left-3 top-3 h-4 w-4 text-gray-400" />
                <Input 
                  placeholder="Search job title, company..." 
                  className="pl-9"
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                />
              </div>

              <Select value={categoryFilter} onValueChange={setCategoryFilter}>
                <SelectTrigger>
                  <SelectValue placeholder="Category" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="All">All Categories</SelectItem>
                  {categories.map(cat => (
                    <SelectItem key={cat.id} value={cat.name}>{cat.name}</SelectItem>
                  ))}
                </SelectContent>
              </Select>

              <Select value={sectorFilter} onValueChange={setSectorFilter}>
                <SelectTrigger>
                  <SelectValue placeholder="Sector" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="All">All Sectors</SelectItem>
                  <SelectItem value="Private">Private</SelectItem>
                  <SelectItem value="Government">Government</SelectItem>
                  <SelectItem value="Off-Campus">Off-Campus</SelectItem>
                </SelectContent>
              </Select>

              <Select value={typeFilter} onValueChange={setTypeFilter}>
                <SelectTrigger>
                  <SelectValue placeholder="Job Type" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="All">All Types</SelectItem>
                  <SelectItem value="Full Time">Full Time</SelectItem>
                  <SelectItem value="Part Time">Part Time</SelectItem>
                  <SelectItem value="Internship">Internship</SelectItem>
                  <SelectItem value="Contract">Contract</SelectItem>
                </SelectContent>
              </Select>
            </div>
          </CardContent>
        </Card>

        {/* Job List */}
        <div className="grid gap-4">
          {isLoading ? (
            <div className="text-center py-20 text-gray-500">Loading jobs...</div>
          ) : filteredJobs.length > 0 ? (
            filteredJobs.map((job) => (
              <Card key={job.id} className="hover:shadow-lg transition-shadow dark:bg-gray-800 border-l-4 border-l-transparent hover:border-l-blue-500">
                <CardContent className="p-6 flex flex-col md:flex-row gap-6 items-start md:items-center">
                  <div className="p-4 bg-blue-50 dark:bg-gray-700 rounded-xl hidden md:block">
                    <Building2 className="w-8 h-8 text-blue-600 dark:text-blue-400" />
                  </div>
                  
                  <div className="flex-grow">
                    <div className="flex flex-wrap gap-2 mb-2">
                      <Badge variant="outline" className="text-blue-600 border-blue-200 bg-blue-50 dark:bg-blue-900/20 dark:border-blue-800">
                        {job.category}
                      </Badge>
                      <Badge variant="secondary" className={
                        job.sector === 'Government' ? 'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300' : 
                        job.sector === 'Off-Campus' ? 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300' : ''
                      }>
                        {job.sector}
                      </Badge>
                    </div>
                    <h3 className="text-xl font-bold text-gray-900 dark:text-white mb-1">
                      <Link to={`${createPageUrl('JobDetails')}?id=${job.id}`} className="hover:text-blue-600">
                        {job.title}
                      </Link>
                    </h3>
                    <div className="flex flex-wrap gap-x-4 gap-y-2 text-sm text-gray-500 dark:text-gray-400">
                      <span className="flex items-center gap-1"><Building2 className="w-4 h-4" /> {job.company}</span>
                      <span className="flex items-center gap-1"><MapPin className="w-4 h-4" /> {job.location}</span>
                      <span className="flex items-center gap-1"><Clock className="w-4 h-4" /> {new Date(job.created_date).toLocaleDateString()}</span>
                    </div>
                  </div>

                  <div className="flex flex-col items-end gap-2 min-w-[120px]">
                    <div className="font-semibold text-gray-900 dark:text-white mb-1">{job.salary_range}</div>
                    <Link to={`${createPageUrl('JobDetails')}?id=${job.id}`} className="w-full md:w-auto">
                      <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white shadow-md shadow-blue-200 dark:shadow-none">
                        View Job
                      </Button>
                    </Link>
                  </div>
                </CardContent>
              </Card>
            ))
          ) : (
            <div className="text-center py-20">
              <h3 className="text-xl font-semibold text-gray-900 dark:text-white mb-2">No jobs found</h3>
              <p className="text-gray-500">Try adjusting your search or filters.</p>
            </div>
          )}
        </div>
      </div>
    </div>
  );
}